@model SacriArt.Models.ShopModels.Painting


<h2>Adding new Painting</h2>

<div class="create">
    <form asp-area="Admin" asp-controller="Admin" asp-action="CreatePainting" method="post" enctype="multipart/form-data">
        
        <p>
            @Html.LabelFor(m => m.Name, "Painting name")
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.Year, "Year")
            @Html.EditorFor(m => m.Year)
        </p>
        <p>
            @Html.LabelFor(m => m.ImageUrl, "Image")
            <input type="file" name="uploadedFile" />
        </p>
        <p>
            @Html.LabelFor(m => m.ExhibitionTitle, "ExhibitionTitle")
            <select class="select option" asp-for="ExhibitionTitle.Id" asp-items="ViewBag.ExhibitionTitles">
                
            </select>
        </p>
        <p>
            @Html.LabelFor(m => m.Author, "Author")
            <select class="select option" asp-for="Author.Id" asp-items="ViewBag.Authors"></select>
        </p>
        <p>
            @Html.LabelFor(m => m.Size, "Size")
            @Html.EditorFor(m => m.Size)
        </p>
        <p>
            @Html.LabelFor(m => m.Style, "Style")
            <select class="select option" asp-for="Style.Id" asp-items="ViewBag.Styles"></select>

        </p>
        <p>
            @Html.LabelFor(m => m.Price, "Price")
            @Html.EditorFor(m => m.Price)
        </p>
           
        <p>
            <input type="submit" value="Save" />
        </p>
    </form>
</div>

<script>
    $(".select option").each(function () {
        $(this).siblings('[value="' + this.value + '"]').remove();
    });
</script>
        