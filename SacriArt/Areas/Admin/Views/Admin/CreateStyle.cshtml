@model SacriArt.Models.ShopModels.Style

@{
    
}
<h2>Adding new Style</h2>

<div class="create">
    <form asp-area="Admin" asp-controller="Admin" asp-action="CreateStyle" method="post" enctype="multipart/form-data">
        
        <p>
            @Html.LabelFor(m => m.Name, "Style name")
            @Html.EditorFor(m => m.Name)
        </p>
     
           
        <p>
            <input type="submit" value="Save" />
        </p>
    </form>
</div>

<script>
    $(".select option").each(function () {
        $(this).siblings('[value="' + this.value + '"]').remove();
    });
</script>
        