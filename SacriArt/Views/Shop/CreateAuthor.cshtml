@model SacriArt.Models.ShopModels.Author

@{
    
}
<h2>Adding new Author</h2>

<div class="container">
    <form asp-action="CreateAuthor" asp-controller="Shop" method="post" enctype="multipart/form-data">
        
        <p>
            @Html.LabelFor(m => m.FullName, "Author Full name")
            @Html.EditorFor(m => m.FullName)
        </p>
        <p>
            @Html.LabelFor(m => m.Bio, "Author BIO")
            @Html.EditorFor(m => m.Bio)
        </p>
                  
        <p>
            <input type="submit" value="Save" />
        </p>
    </form>
</div>

<script>
    $(".select option").each(function () {
        $(this).siblings('[value="' + this.value + '"]').remove();
    });
</script>
        